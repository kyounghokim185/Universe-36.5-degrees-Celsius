{
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/backend/main.py"
        }
    ],
    "builds": [
        {
            "src": "backend/main.py",
            "use": "@vercel/python"
        },
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ]
}